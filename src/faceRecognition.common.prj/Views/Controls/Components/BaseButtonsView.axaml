<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:components="clr-namespace:FaceRecognition.Common.Views.Controls.Components"
             x:Class="FaceRecognition.Common.Views.Controls.Components.BaseButtonsView">

	<StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="8 12 8 12">
		<Button Content="Apply"
                HorizontalAlignment="Left"
                Command="{Binding $parent[components:BaseButtonsView].ApplyCommand}"/>
		<Button Content="Cancel"
                HorizontalAlignment="Right"
                Command="{Binding $parent[components:BaseButtonsView].CancelCommand}"/>
	</StackPanel>

</UserControl>

